.list
  label.item.item-input
    input(type="text" ng-model='newUser.name' placeholder='Name' required)
  label.item.item-input
    input(type="email" ng-model='newUser.email' placeholder='Email' required)
  label.item.item-input
    input(type="password" ng-model='newUser.password' required
    placeholder='Password' ng-minlength="4" ng-maxlength="255")
  label.item.item-input
    input(type="password" ng-model='newUser.password2' required
    placeholder='Confirm Password' ng-minlength="4" ng-maxlength="255")
