ion-view(view-title='')
  ion-content
    .alarm-motions
      .list
        a.item.item-icon-left(ng-repeat='motion in motions | orderBy: "sensor_name" track by motion.id')
          i.icon.ion-android-walk
          span {{motion.sensor_name}}
          span.item-note  {{motion.localTimeFormatted}}

      .text-center(ng-if='motions.length === 0')
        h3 No motions detected
